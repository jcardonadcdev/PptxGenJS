{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "scripthost"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./out",
    "sourceMap": false,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
